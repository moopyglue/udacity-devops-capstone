pipeline {
    agent any 
    stages {
        stage('Lint Analysis') {
            steps {
                echo 'Run the static analysis to the code' 
                sh "/usr/bin/env"
                sh "cd eyes-server ; make lint"
            }
        }
        stage('Build go executable and docker file image') {
            steps {
                sh "cd eyes-server ; make all"
            }
        }
        stage('Security Check - EMPTY') {
            steps {
                echo 'Run the security check against the application' 
            }
        }
        stage('Run Unit Tests - EMPTY') {
            steps {
                echo 'Run unit tests from the source code' 
            }
        }
        stage('Publish docker container') {
            steps {
                sh "cd eyes-server ; ./upload_docker.bash"
            }
        }
    }
}
